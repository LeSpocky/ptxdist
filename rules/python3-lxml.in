## SECTION=python3

config PYTHON3_LXML
	tristate
	select PYTHON3
	select LIBXML2
	select LIBXML2_C14N
	select LIBXML2_DTD
	select LIBXML2_HTML
	select LIBXML2_RELAXNG
	select LIBXML2_SAX1
	select LIBXML2_SCHEMAS
	select LIBXSLT
	select LIBXSLT_LIBEXSLT
	select LIBXSLT_PROFILER
	prompt "lxml"
	help
	  lxml is a Pythonic, mature binding for the libxml2 and libxslt libraries.
	  It provides safe and convenient access to these libraries
	  using the ElementTree API.
	  It extends the ElementTree API significantly to offer support for
	  XPath, RelaxNG, XML Schema, XSLT, C14N and much more.
