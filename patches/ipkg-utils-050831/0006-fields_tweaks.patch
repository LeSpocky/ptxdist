 binary: build
 	mkdir -p ipkg-build-binary/usr/bin
diff --git a/ipkg-list-fields b/ipkg-list-fields
new file mode 100644
index 0000000..f726ef8
--- /dev/null
+++ b/ipkg-list-fields
@@ -0,0 +1,13 @@
+#!/usr/bin/python
+
+import sys, ipkg
+
+def usage():
+     sys.stderr.write("%s ipk\n" % (sys.argv[0],))
+     sys.exit(-1)
+
+if (len(sys.argv) < 2):
+     usage()
+
+print ipkg.Package(sys.argv[1])
+
